<resources>
    <style name="Theme.FinApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/light_black</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/black_overlay</item>

        <item name="android:statusBarColor">?attr/colorOnSecondary</item>
    </style>

    <style name="LightText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BoldText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="StagnationStockStyle" parent="BoldText">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="GrowStockStyle" parent="BoldText">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="IncreaseStockStyle" parent="BoldText">
        <item name="android:textColor">@color/red</item>
    </style>
</resources>